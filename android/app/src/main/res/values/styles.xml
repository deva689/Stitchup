<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Theme for the launch screen (shown while Flutter initializes) -->
    <style name="LaunchTheme" parent="@android:style/Theme.Light.NoTitleBar">
        <!-- Background image shown during app startup -->
        <item name="android:windowBackground">@drawable/launch_background</item>
    </style>

    <!-- Theme used once the app has started. This sets background for native Android parts behind Flutter UI -->
    <style name="NormalTheme" parent="@android:style/Theme.Light.NoTitleBar">
        <!-- Uses the default background color of the device/theme -->
        <item name="android:windowBackground">?android:colorBackground</item>
    </style>

    <!-- Custom theme for UCropActivity to avoid status bar overlap and use full screen -->
    <style name="UCropActivityTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Black status bar -->
        <item name="android:statusBarColor">#000000</item>
        <!-- Ensures status bar and nav bar backgrounds are drawn -->
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <!-- Ensures content is laid out correctly under the status bar -->
        <item name="android:fitsSystemWindows">true</item>
    </style>

</resources>
